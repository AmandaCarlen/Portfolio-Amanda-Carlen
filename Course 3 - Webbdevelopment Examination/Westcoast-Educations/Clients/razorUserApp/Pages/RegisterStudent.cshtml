@page
@model razorUserApp.Pages.RegisterStudent
@{
    ViewData["Title"] = "RegisterStudent";
}

<header>
    <h1 class="page-title">Registrera som student</h1>

</header>
<section class="form-wrapper">
    <h4>Student information</h4>
    <section>        
        <form method="post">
            <div>
                <label asp-for="StudentModel.FirstName"></label>
                <input asp-for="StudentModel.FirstName">
            </div>
            <div>
                <label asp-for="StudentModel.LastName"></label>
                <input asp-for="StudentModel.LastName">
            </div>
            <div>
                <label asp-for="StudentModel.Email"></label>
                <input asp-for="StudentModel.Email">
            </div>
            <div>
                <label asp-for="StudentModel.PassWord"></label>
                <input asp-for="StudentModel.PassWord">
            </div>
            <div>
                <label asp-for="StudentModel.PhoneNumber"></label>
                <input asp-for="StudentModel.PhoneNumber">
            </div>
            <div>
                <label asp-for="StudentModel.StreetAdress"></label>
                <input asp-for="StudentModel.StreetAdress">
            </div>
            <div>
                <label asp-for="StudentModel.ZipCode"></label>
                <input asp-for="StudentModel.ZipCode">
            </div>
            <div>
                <label asp-for="StudentModel.City"></label>
                <input asp-for="StudentModel.City">
            </div>
            <div>
                <label asp-for="StudentModel.Country"></label>
                <input asp-for="StudentModel.Country">
            </div>
             <div class="button">
                <button type="submit" class="btn">Skapa</button>
            </div>
        </form>

    </section>
</section>
