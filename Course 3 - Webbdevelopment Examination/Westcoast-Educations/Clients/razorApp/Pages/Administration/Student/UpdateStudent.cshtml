@page
@model razorApp.Pages.Administration.Student.UpdateStudent
@{
    ViewData["Title"] = "UpdateStudent";
}

<header>
    <h1 class="page-title">Ändra student</h1>

</header>
<section class="center">
    <h4>Student information</h4>
    <section>        
        <form method="post">
            <div class="form-controller">
                <input type="hidden" asp-for="StudentModel.Id">
            </div> 
            <div>
                <label asp-for="StudentModel.FirstName"></label>
                <input asp-for="StudentModel.FirstName">
            </div>
            <div>
                <label asp-for="StudentModel.LastName"></label>
                <input asp-for="StudentModel.LastName">
            </div>
            <div>
                <label asp-for="StudentModel.PhoneNumber"></label>
                <input asp-for="StudentModel.PhoneNumber">
            </div>
            <div>
                <label asp-for="StudentModel.StreetAdress"></label>
                <input asp-for="StudentModel.StreetAdress">
            </div>
            <div>
                <label asp-for="StudentModel.ZipCode"></label>
                <input asp-for="StudentModel.ZipCode">
            </div>
            <div>
                <label asp-for="StudentModel.City"></label>
                <input asp-for="StudentModel.City">
            </div>
            <div>
                <label asp-for="StudentModel.Country"></label>
                <input asp-for="StudentModel.Country">
            </div>
            <div>
                 <h6>Kurser:</h6>

                <table>
                    @for (int i = 0; i < Model.CourseCheckboxList.Count(); i++)
                    {
                        <tr>
                            <td><label>@Model.CourseCheckboxList[i].Name</label></td>
                            <td><input asp-for="CourseCheckboxList[i].IsChecked" /></td>
                            <input asp-for="CourseCheckboxList[i].Name" type="hidden" value=@Model.CourseCheckboxList[i].Name/>
                        </tr>
                        
                    }
                </table>
            </div>
             <div class="button">
                <button type="submit" class="btn">Spara</button>
            </div>
        </form>
            <a asp-page="./StudentGallery"><i class="fa-solid fa-left-long"></i>Tillbaka till alla lärare</a>

    </section>
</section>
