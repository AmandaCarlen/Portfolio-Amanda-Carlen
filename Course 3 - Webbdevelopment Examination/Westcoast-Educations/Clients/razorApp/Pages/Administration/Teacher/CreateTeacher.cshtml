@page
@model razorApp.Pages.Administration.Teacher.CreateTeacher
@{
    ViewData["Title"] = "CreateTeacher";
}

<header>
    <h1>Lägg till ny Teacher</h1>

</header>
<section class="center">
    <h4>Teacher information</h4>
    <section>
        <form method="post">
            <div>
                <label asp-for="TeacherModel.FirstName"></label>
                <input asp-for="TeacherModel.FirstName">
            </div>
            <div>
                <label asp-for="TeacherModel.LastName"></label>
                <input asp-for="TeacherModel.LastName">
            </div>
            <div>
                <label asp-for="TeacherModel.Email"></label>
                <input asp-for="TeacherModel.Email">
            </div>
            <div>
                <label asp-for="TeacherModel.PassWord"></label>
                <input asp-for="TeacherModel.PassWord">
            </div>
            <div>
                <label asp-for="TeacherModel.PhoneNumber"></label>
                <input asp-for="TeacherModel.PhoneNumber">
            </div>
            <div>
                <label asp-for="TeacherModel.StreetAdress"></label>
                <input asp-for="TeacherModel.StreetAdress">
            </div>
            <div>
                <label asp-for="TeacherModel.ZipCode"></label>
                <input asp-for="TeacherModel.ZipCode">
            </div>
            <div>
                <label asp-for="TeacherModel.City"></label>
                <input asp-for="TeacherModel.City">
            </div>
            <div>
                <label asp-for="TeacherModel.Country"></label>
                <input asp-for="TeacherModel.Country">
            </div>
            <div>
                <h6>Skills:</h6>
                <table>
                    @for (int i = 0; i < Model.SkillCheckboxList.Count(); i++)
                    {
                        <tr>
                            <td><label>@Model.SkillCheckboxList[i].Name</label></td>
                            <td><input asp-for="SkillCheckboxList[i].IsChecked" /></td>
                            <input asp-for="SkillCheckboxList[i].Name" type="hidden"
                            value=@Model.SkillCheckboxList[i].Name />
                        </tr>

                    }
                </table>
            </div>
            <div class="button">
                <button type="submit" class="btn">Spara</button>
            </div>
        </form>
        <a asp-page="./TeacherGallery"><i class="fa-solid fa-left-long"></i>Tillbaka till alla lärare</a>

    </section>
</section>
